<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sestek.alarmy.MainActivity">

    <Button
        android:text="Alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp"
        android:id="@+id/btnAlarm"
        android:onClick="clocky" />

    <Button
        android:text="CountDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnAlarm"
        android:layout_alignEnd="@+id/btnAlarm"
        android:layout_marginBottom="118dp"
        android:id="@+id/btnCountdown"
        android:onClick="clocky" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignBottom="@+id/btnAlarm"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:id="@+id/etAlarm"
        android:text="12:30" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="00:00:10"
        android:ems="10"
        android:layout_above="@+id/btnCountdown"
        android:layout_alignLeft="@+id/etAlarm"
        android:layout_alignStart="@+id/etAlarm"
        android:layout_marginBottom="13dp"
        android:id="@+id/etCountdown" />

    <TextView
        android:text="Alarm kurmak için aşağıdaki formatta bir saat değeri gir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etAlarm"
        android:layout_alignLeft="@+id/etAlarm"
        android:layout_alignStart="@+id/etAlarm"
        android:id="@+id/textView" />

    <TextView
        android:text="Geri sayım kurmak için aşağıdaki formatta bir gerisayım değeri gir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_above="@+id/etCountdown"
        android:layout_alignLeft="@+id/etCountdown"
        android:layout_alignStart="@+id/etCountdown" />
</RelativeLayout>
